<config>
    <modules>
        <RetailOps_Api>
            <version>1.0.2</version>
        </RetailOps_Api>
    </modules>
    <global>
        <helpers>
            <retailops_api>
                <class>RetailOps_Api_Helper</class>
            </retailops_api>
        </helpers>
        <models>
            <retailops_api>
                <class>RetailOps_Api_Model</class>
                <resourceModel>retailops_api_resource</resourceModel>
            </retailops_api>
            <retailops_api_resource>
                <class>RetailOps_Api_Model_Resource</class>
                <entities>
                    <order_status_history>
                        <table>retailops_order_status_history</table>
                    </order_status_history>
                    <media_import>
                        <table>retailops_media_import</table>
                    </media_import>
                </entities>
            </retailops_api_resource>
        </models>
        <blocks>
            <retailops_api>
                <class>RetailOps_Api_Block</class>
            </retailops_api>
        </blocks>
        <resources>
            <retailops_api_setup>
                <setup>
                    <module>RetailOps_Api</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </retailops_api_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <RetailOps_Api after="Mage_Adminhtml">RetailOps_Api_Adminhtml</RetailOps_Api>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <retailops_api>
                    <file>retailops.xml</file>
                </retailops_api>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
    </frontend>
    <default>
        <retailops_settings>
            <catalog>
                <multiple_select_options_separator>,</multiple_select_options_separator>
            </catalog>
        </retailops_settings>
    </default>
</config>
